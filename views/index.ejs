<% include header %>
<div class="row">

  <div class="col-sm-6">
		<div class="well">
      <h3>Welcome</h3>
      SocialTransformation is a tool to help you create competition to motivate you to meet your health and fitness goals.
    </div>
  </div>
  
  <div class="col-sm-6">
    <div class="well">
      <h3><span class="fa fa-sign-in"></span> Login or Register using:</h3>

      <!-- show any messages that come back with authentication -->
      <% 
        if (message.length > 0) { 
      %>
      <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <br>
      <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
      &nbsp;&nbsp;&nbsp;
		  <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
      <br><br>
    <h3><span class="fa fa-sign-in"></span> Login with SocialTransformation account:</h3>
      <form action="/login" method="post">
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
      </form>
      <hr>

	    <p>Need a SocialTransformation account? <a href="/signup">Signup</a></p>
    </div>
  </div>
</div>
<% include footer %>